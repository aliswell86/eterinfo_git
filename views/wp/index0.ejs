          $("#ctype1_view").css("display","");
          $("#ctype2_view").css("display","none");
          $("input:radio[name=clyn]").attr("disabled",false);
          $("input:radio[name=item_dv1]").attr("disabled",false);
          $("input:radio[name=item_dv2]").attr("disabled",false);
          $("input:radio[name=item_dv3]").attr("disabled",true);
          $("input:radio[name=item_dv4]").attr("disabled",false);
        }else if($(this).val() == "2") { //방어구
          $("#ctype1_view").css("display","none");
          $("#ctype2_view").css("display","");
          $("input:radio[name=clyn]").attr("disabled",false);
          $("input:radio[name=item_dv1]").attr("disabled",false);
          $("input:radio[name=item_dv2]").attr("disabled",false);
          $("input:radio[name=item_dv3]").attr("disabled",false);
          $("input:radio[name=item_dv4]").attr("disabled",false);
        }else if($(this).val() == "3" || $(this).val() == "4") { //코튬 날개
          $("input:radio[name=clyn]").attr("disabled",false);
          $("input:radio[name=item_dv1]").attr("disabled",true);
          $("input:radio[name=item_dv2]").attr("disabled",true);
          $("input:radio[name=item_dv3]").attr("disabled",false);
          $("input:radio[name=item_dv4]").attr("disabled",false);
        }else{
          $("input:radio[name=clyn]").attr("disabled",true);
          $("input:radio[name=item_dv1]").attr("disabled",true);
          $("input:radio[name=item_dv2]").attr("disabled",true);
          $("input:radio[name=item_dv3]").attr("disabled",true);
          $("input:radio[name=item_dv4]").attr("disabled",true);
        }
      });

